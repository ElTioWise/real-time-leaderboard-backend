# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=leaderboard
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_SYNC=true
DATABASE_LOGGING=true

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=15m
REFRESH_TOKEN_SECRET=your-super-secret-refresh-token-key-change-this-in-production
REFRESH_TOKEN_EXPIRY=7d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# External APIs
GOOGLE_BOOKS_API_KEY=
GOOGLE_BOOKS_API_URL=https://www.googleapis.com/books/v1
OPENLIBRARY_API_URL=https://openlibrary.org/api

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/google/callback

FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=http://localhost:3000/api/v1/auth/oauth/facebook/callback

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10
THROTTLE_SEARCH_LIMIT=30
THROTTLE_REGISTER_LIMIT=5
THROTTLE_UPLOAD_LIMIT=5

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=debug